{
  "settings": {
    "analysis": {
      "analyzer": {
        "locale_content": {
          "type": "italian"
        },
        "locale_text_index": {
          "tokenizer": "whitespace",
          "filter": [
            "asciifolding",
            "custom_word_delimiter_graph",
            "lowercase",
            "flatten_graph",
            "italian_stemmer_multiplexer"
          ]
        },
        "locale_text_query": {
          "tokenizer": "whitespace",
          "filter": [
            "asciifolding",
            "custom_word_delimiter_graph",
            "lowercase",
            "italian_stemmer_multiplexer"
          ]
        }
      },
      "filter": {
        "italian_stemmer": {
          "type": "stemmer",
          "language": "light_italian"
        },
        "italian_stemmer_multiplexer": {
          "type": "multiplexer",
          "filters": [ "italian_stemmer" ]
        }
      }
    }
  }
}