{
  "settings": {
    "analysis": {
      "analyzer": {
        "locale_content": {
          "type": "english"
        },
        "locale_text_index": {
          "tokenizer": "whitespace",
          "filter": [
            "asciifolding",
            "custom_word_delimiter_graph",
            "lowercase",
            "flatten_graph",
            "english_stemmer_multiplexer"
          ]
        },
        "locale_text_query": {
          "tokenizer": "whitespace",
          "filter": [
            "asciifolding",
            "custom_word_delimiter_graph",
            "lowercase",
            "english_stemmer_multiplexer"
          ]
        }
      },
      "filter": {
        "english_stop": {
          "type":       "stop",
          "stopwords":  "_english_"
        },
        "english_stemmer": {
          "type":       "stemmer",
          "language":   "english"
        },
        "english_stemmer_multiplexer": {
          "type": "multiplexer",
          "filters": [ "english_stemmer" ]
        }
      }
    }
  }
}