    <select id="select_ChangeSetLast" parameterMap="parameter_CommitTimeMap" resultType="long">
        select
            acs.id 
        from
            alf_acl_change_set acs
        where
            acs.commit_time_ms =
            (
                select max(commit_time_ms) from alf_acl_change_set
                where commit_time_ms &lt;= ?
