		<xsd:complexContent>
			<xsd:extension base="cms:Category">
				<xsd:sequence>
					<xsd:element name="rootCategory" type="cms:Category"></xsd:element>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType> -->

</xsd:schema>
