    <humanPerformer>
      <resourceAssignmentExpression>
        <formalExpression>admin</formalExpression>
      </resourceAssignmentExpression>
    </humanPerformer>
    </userTask>
    <sequenceFlow id="flow2" sourceRef="someTask2" targetRef="end" />

    <endEvent id="end" />

