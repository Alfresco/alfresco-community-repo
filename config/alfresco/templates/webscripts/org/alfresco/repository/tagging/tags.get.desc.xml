<webscript>
  <shortname>List all tags</shortname>
  <description><![CDATA[
  Get the currently available tags for the specified store.
  <br />
  <dl>
  <dt>tag_filter</dt><dd>The optional tag filter limits the returned tags to those containing the filter. </dd>
  </dl>
  ]]></description>
  <url>/api/tags/{store_type}/{store_id}?tf={tag_filter?}</url>
  <format default="json">argument</format>
  <authentication>user</authentication>
  <transaction allow="readonly">required</transaction>
  <lifecycle>draft_public_api</lifecycle>
  <family>Tagging</family>
</webscript>